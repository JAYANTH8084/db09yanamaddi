extends layout

block content
  h1= title
  br
  - var results1 = [{color:"white", price:7, weight:20},{color:"yellow", price:10, weight:55.7},{color:"blue", price:8, weight:43}];

   div(class = "container-fluid")
    div(class = "row")
     each i,index in results1
        div(class="col-sm-4" onclick=`buy(${index})`) color: #{i.color} 
        br
        br 
        div(class="col-sm-4" onclick=`buy(${index})`) price: #{i.price}
        br
        br  
        div(class="col-sm-4" onclick=`buy(${index})`) weigth: #{i.weight}
        script.
                function buy(itemNo){
                    alert(`You purchased item ${itemNo+1}`)
                }
